generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Felhasználó modell
model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  username       String
  password       String
  phonenumber    String
  admin          String   @default("false")
  profilePicture String?
  animals        Animal[] @relation("UserAnimals")

  @@map("users")
}

// Állat hirdetés modell
model Animal {
  id               Int     @id @default(autoincrement())
  talalt_elveszett String  // Állat státusza (talált vagy elveszett)
  allatfaj         String 
  kategoria        String? // Állat kategóriája
  datum            String  // Feltöltés dátuma
  elveszesIdeje    String? // Eltűnés/megtalálás dátuma
  neme             String  @default("Ismeretlen")
  szin             String
  meret            String
  egyeb_info       String? // Egyéb információ
  helyszin         String
  filePath         String
  visszakerult_e   String
  chipszam         BigInt?
  elutasitva       String  @default("")
  elutasitasoka    String  @default("")
  visszajelzes     String  @default("")

  userId Int
  user   User @relation("UserAnimals", fields: [userId], references: [id])
}

// Üzenet modell
model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  senderId  Int
  receiverId Int

  @@map("messages")
}
